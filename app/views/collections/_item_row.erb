
<div class="searchListingRow" onclick="location.href='<%= item_path(item)%>';" style="cursor:pointer;">
	<div class="searchListingRowThumb">
          <%=  link_to(image_tag(item.default_image(:medium) , :width => 100, :height => 100),  item_path(item) )%>
	</div>


	<div class="searchListingRowDetail">
		<div class="search
                     AlbumName"><%=link_to(h(item.album_name), item_path(item), :class=>'featuredColour') %></div>
		<div class="searchAddress"><%=h("#{item.artist_name}") %><%=h( "  Year : #{item.year.strftime("%Y") } ") unless item.year.nil?  %></div>
                
		<div class="searchDescription"><%=simple_format(h(item.description)) %></div>
	</div>
	<div class="cb"></div>
        <%- if logged_in? -%>
        <div class="searchDescriptionHost"><%= link_to "Edit"  , edit_item_path(item) %>            <%= link_to "Delete"  %> </div>
        <% end  %>
        
</div>
